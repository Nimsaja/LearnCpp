{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build & debug file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${workspaceFolder}/18_MultipleFiles/*.cpp"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "build & run file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-o",
          "${fileBasenameNoExtension}",
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }